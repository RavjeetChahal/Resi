name: Deploy to EC2 with Docker

on:
  push:
    branches:
      - main

permissions:
  contents: read
  packages: write

jobs:
  deploy:
    runs-on: ubuntu-latest
    environment: Production
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Log in to GHCR
        uses: docker/login-action@v2
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Build and push Docker image
        run: |
          REPO_LOWER=$(echo ${{ github.repository }} | tr '[:upper:]' '[:lower:]')
          IMAGE_NAME=ghcr.io/$REPO_LOWER/my-app:latest
          docker build --no-cache \
            --build-arg EXPO_PUBLIC_API_BASE_URL="${{ secrets.EXPO_PUBLIC_API_BASE_URL }}" \
            --build-arg EXPO_PUBLIC_FIREBASE_API_KEY="${{ secrets.EXPO_PUBLIC_FIREBASE_API_KEY }}" \
            --build-arg EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN="${{ secrets.EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN }}" \
            --build-arg EXPO_PUBLIC_FIREBASE_PROJECT_ID="${{ secrets.EXPO_PUBLIC_FIREBASE_PROJECT_ID }}" \
            --build-arg EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET="${{ secrets.EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET }}" \
            --build-arg EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="${{ secrets.EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID }}" \
            --build-arg EXPO_PUBLIC_FIREBASE_APP_ID="${{ secrets.EXPO_PUBLIC_FIREBASE_APP_ID }}" \
            --build-arg EXPO_PUBLIC_FIREBASE_DATABASE_URL="${{ secrets.EXPO_PUBLIC_FIREBASE_DATABASE_URL }}" \
            -t $IMAGE_NAME .
          docker push $IMAGE_NAME

      - name: Deploy to EC2
        uses: appleboy/ssh-action@v1.0.3
        with:
          host: ${{ secrets.EC2_HOST }}
          username: ${{ secrets.EC2_USER }}
          key: ${{ secrets.EC2_SSH_KEY }}
          script: |
            REPO_LOWER=$(echo ${{ github.repository }} | tr '[:upper:]' '[:lower:]')
            IMAGE_NAME=ghcr.io/$REPO_LOWER/my-app:latest
            docker pull $IMAGE_NAME
            docker stop my-app || true
            docker rm my-app || true
            docker run -d --name my-app \
              -p 80:3000 \
              -e OPENAI_API_KEY='${{ secrets.OPENAI_API_KEY }}' \
              -e FIREBASE_SERVICE_ACCOUNT='${{ secrets.FIREBASE_SERVICE_ACCOUNT }}' \
              -e FIREBASE_DATABASE_URL='${{ secrets.FIREBASE_DATABASE_URL }}' \
              -e CORS_ALLOW_ORIGINS='*' \
              $IMAGE_NAME